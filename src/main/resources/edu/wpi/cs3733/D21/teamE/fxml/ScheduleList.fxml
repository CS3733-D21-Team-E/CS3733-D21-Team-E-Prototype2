            <HBox alignment="CENTER" layoutX="935.0" layoutY="-11.0" AnchorPane.rightAnchor="0.0">
               <children>
                  <JFXButton buttonType="RAISED" minWidth="50.0" onAction="#editToDo" styleClass="submit-button" text="Edit">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </JFXButton>
                  <JFXButton buttonType="RAISED" onAction="#markComplete" styleClass="submit-button" text="Mark As Complete">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
