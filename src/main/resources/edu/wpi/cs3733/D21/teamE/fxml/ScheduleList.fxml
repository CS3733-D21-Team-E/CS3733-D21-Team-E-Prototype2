                  <JFXButton onAction="#addToDo" ripplerFill="WHITE" text=" ">
                     <graphic>
                        <FontAwesomeIconView glyphName="PLUS_CIRCLE" size="50" text="" />
                     </graphic>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
